<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
	<DockLayout stetchLastChild="true">
		
		<DockLayout dock="top" class="toolbar toolbar-top" stretchLastChild="true">
			<Button text="{{'ion-ios-settings' | fonticon}}" dock="left" class="ion button" />
			<Switch checked="{{ isEnabled }}" tap="{{ onToggleEnabled }}" dock="right" />
			<Label class="title" text="Background Geolocation" />			
		</DockLayout>
		
		<DockLayout dock="bottom" class="toolbar toolbar-bottom" stretchLastChild="true">
			<Button text="{{'ion-navigate'| fonticon}}" class="button ion" tap="{{ onGetCurrentPosition }}" dock="left"/>
			<Button text="{{'ion-play' | fonticon}}" dock="right" class="button ion" />
			<Label text="Status" class="status" />
		</DockLayout>

		<HtmlView html="{{ locationData }}" class="workspace location" textWrap="false" />

	</DockLayout>
</Page>