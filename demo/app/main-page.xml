<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
	<DockLayout stetchLastChild="true">
		
		<DockLayout dock="top" style="background-color: red;" stretchLastChild="true">
			<Button text="[...]" dock="left" />
			<Button text="(*)" tap="{{ onToggleEnabled }}" dock="right" />
			<Label class="title" text="Background Geolocation" />			
		</DockLayout>
		
		<DockLayout dock="bottom" style="background-color: blue" stretchLastChild="true">
			<Button text="(*)" tap="{{ onGetCurrentPosition }}" dock="left"/>
			<Button text="[>]" tap="{{ onChangePace }}" dock="right" />
			<Label text="Status" class="status" />
		</DockLayout>

		<StackLayout style="background-color: white;">
			<Label text="{{ locationData }}" class="location" textWrap="true" />
		</StackLayout>
	</DockLayout>
</Page>